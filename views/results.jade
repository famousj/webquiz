extends layout

block header
  meta(property="fb:app_id" content="682969031761091")
  meta(property="og:title" content=fbtitle)
  meta(property="og:site_name" content="Dang Cold")
  meta(property="og:url" content=url)
  meta(property="og:description" content=fbdescription)
  meta(property="og:image" content=fbimg)

  //FontAwesome
  link(href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", rel="stylesheet")

  // Social buttons
  link(rel="stylesheet" href="css/bootstrap-social.css")

block content
  div(id="fb-root")
  script.
    (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  .jumbotron
    .quiz-container.container
      .row
        .col-md-12.text-center
          h2= topic
      .row
        .col-md-12.text-center
          img(src=img)
      .row
        .col-md-3.text-center
        .col-md-2.text-center
          h2
            a(class="btn btn-block btn-social btn-sm btn-facebook", href=fburl, target="_blank").
              <i class="fa fa-facebook"></i> Share on Facebook
        .col-md-2.text-center
          h2
            a(class="btn btn-block btn-social btn-sm btn-twitter", href=fburl).
              <i class="fa fa-twitter"></i> Tweet this
        .col-md-2.text-center
          h2
            a(class="btn btn-block btn-social btn-sm btn-facebook", href=fburl).
              <i class="fa fa-facebook"></i> Post to Urbit
      .row
        .col-md-12.text-center
          h2
          a(href="index.html", class="btn btn-lg btn-primary") I Want a Do-Over!


  // Bootstrap core JavaScript
