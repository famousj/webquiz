extends layout

block header
  meta(property="fb:app_id" content="682969031761091")
  meta(property="og:title" content="I took Dang Cold's Mystery Quiz and I got a dumb answer!")
  meta(property="og:site_name" content="Dang Cold")
  meta(property="og:url" content=url)
  meta(property="og:description" content="Smell the glove!")
  meta(property="og:image" content=img)

block content
  div(id="fb-root")
  script.
    (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  .jumbotron
    .quiz-container.container
      .row
        .col-md-12.text-center
          h2= topic
      .row
        .col-md-12.text-center
          img(src=img)
      .row
        .col-md-12.text-center
          h2
          a(href=fburl, target="_blank") Share on Facebook
      .row
        .col-md-12.text-center
          h2
          a(href="index.html", class="btn btn-lg btn-primary") I Want a Do-Over!


  // Bootstrap core JavaScript
  // Placed at the end of the document so the pages load faster 
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js")
  script(src="js/bootstrap.min.js")
