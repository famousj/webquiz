extends layout

block header
  meta(property="fb:app_id", content="682969031761091")
  meta(property="og:title", content=fbtitle)
  meta(property="og:site_name", content="Dang Cold")
  meta(property="og:url", content=url)
  meta(property="og:description", content=fbdescription)
  meta(property="og:image", content=fbimg)
  meta(property="twitter:card", content="summary")
  meta(property="twitter:title", content=fbtitle)
  meta(property="twitter:description", content=fbdescription)
  meta(property="twitter:image", content=fbimg)

  //FontAwesome
  link(href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", rel="stylesheet")
  // Social buttons
  link(rel="stylesheet" href="css/bootstrap-social.css")
  script(type="text/javascript", src="//platform.twitter.com/widgets.js")

block content
  div(id="fb-root")
  script.
    (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  .jumbotron
    .quiz-container.container
      .row
        .col-md-12.text-center
          h2= topic
      .row
        .col-md-12.text-center
          img(src=img)
      .row
        .col-md-4
        .col-md-2
          h2
          a(class="btn btn-block btn-social btn-sm btn-facebook", href=fburl, target="_blank").
            <i class="fa fa-facebook"></i>
            Share on Facebook

        .col-md-2
          h2
          - var twurl = "https://twitter.com/intent/tweet?url=" + encodeURIComponent(url) + "&text=" + encodeURIComponent(twtext) + "&hashtags=mysteryquiz"
          
          a(class="btn btn-block btn-social btn-sm btn-twitter", 
              href!=twurl)
            <i class="fa fa-twitter"></i> Tweet this

      .row
        .col-md-12.text-center
          h2
          a(href="index.html", class="btn btn-lg btn-primary") Take the Quiz Again


  
